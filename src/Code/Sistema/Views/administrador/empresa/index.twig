{% extends 'layout.twig' %}

{% block links %}
{% endblock %}

{% block conteudo %}
<br><br><br>
<div class="row">
    <div class="col-lg-12">
        <h2>Empresas</h2>
    </div>
</div>

<div>
  <ol class="breadcrumb">
    <li><a href="{{ path('index-admin') }}">Painel do Administrador</a></li>
    <li><a href="#">Módulos</a></li>
    <li class="active">Empresa</li>
  </ol>
</div>

<div class="row">
    <div class="col-lg-9">
        <a href="{{ path('new-empresa') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Empresa</a>
    </div>
    <div class="col-lg-3">
        <form action="{{ path("search-empresa") }}" class="form-inline" role="form">
            <div class="form-group">
                <label class="sr-only" for="">Curso</label>
                <input type="text" class="form-control" name="search" placeholder="Nome da empresa..." {%if search is defined %} value="{{search}}" {% endif %}>
            </div>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i> </button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
    	<div>Total de <strong>{{totalRegistros}}</strong> registros encontrados. {%if search is defined %} {%if search is not empty %}Termo pesquisado: <b>{{search}}</b> {%endif%}{%endif%}</div>
        <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Empresa</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>Telefone</th>
                    <th>Email</th>                     
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for empresa in empresas %}
                    <tr>
                        <td>{{ empresa.nome }}</td>
                        <td>{{ empresa.cidade }}</td>
                        <td>{{ empresa.estado }}</td>
                        <td>{{ empresa.fone }}</td>                        
                        <td>{{ empresa.email }}</td>                        
                        <td>
                            <a href="{{ path('edit-empresa', {id: empresa.id}) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a>
                            <a href="{{ path('delete-empresa', {id: empresa.id}) }}" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </a>
                            <a href="{{ path('list-empresa-resp', {empresa_id: empresa.id}) }}" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-link" aria-hidden="true"></span> </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
        <ul class="pagination">
            {{ paginacao |raw }}
        </ul>
    </div>
</div>
{% endblock %}

{% block scripts %}
{% endblock %}