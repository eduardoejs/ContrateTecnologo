{% extends 'layout.twig' %}

{% block links %}
{% endblock %}

{% block conteudo %}
 <br><br><br>
    <div class="row">
    <div class="col-lg-12">
        <h2>Alterar dados da Empresa</h2>
    </div>
</div>

<div>
  <ol class="breadcrumb">
    <li><a href="{{ path('index-admin') }}">Painel do Administrador</a></li>
    <li><a href="#">Módulos</a></li>
    <li><a href="{{path('list-empresa')}}">Empresa</a></li>
    <li class="active">Alterar</li>
  </ol>
</div>

<div class="container-fluid">
  <div class="row well">
        <form action="{{ path('edit-empresa', {'id': empresa[0].id} ) }}" method="post">

            <div class="form-group col-md-12 has-feedback">
                <label class="control-label" for="nome">Nome da Empresa</label>
                <input type="text" name="nome" id="nome" class="form-control" data-validation="required" data-validation-error-msg="* Campo obrigatório" value="{{empresa[0].nome}}" >
            </div>
            <div class="form-group col-md-12 has-feedback">
                <label class="control-label" for="endereco">Endereço</label>
                <input type="text" name="endereco" id="endereco" class="form-control" data-validation="required" data-validation-error-msg="* Campo obrigatório" value="{{empresa[0].endereco}}" >
            </div>
            <div class="form-group col-md-12 has-feedback">
                <label class="control-label" for="cidade">Cidade</label>
                <input type="text" name="cidade" id="cidade" class="form-control" data-validation="required" data-validation-error-msg="* Campo obrigatório" value="{{empresa[0].cidade}}" >
            </div>
            <div class="form-group col-md-12 has-feedback">
                <label class="control-label" for="estado">Estado</label>
                <input type="text" name="estado" id="estado" class="form-control" data-validation="required" data-validation-error-msg="* Campo obrigatório" value="{{empresa[0].estado}}" >
            </div>
            <div class="form-group col-md-12 has-feedback">
                <label class="control-label" for="fone">Telefone</label>
                <input type="text" name="fone" id="fone" class="form-control" data-validation="required" data-validation-error-msg="* Campo obrigatório" value="{{empresa[0].fone}}" >
            </div>
            <div class="form-group col-md-12 has-feedback">
                <label class="control-label" for="email">Email</label>
                <input type="text" name="email" id="email" class="form-control" data-validation="required" data-validation-error-msg="* Campo obrigatório" value="{{empresa[0].email}}" >
            </div>

            <div class="col-md-12">
            <input type="hidden" name="id" value="{{ empresa[0].id }}">
            <input type="hidden" id="_method" name="_method" value="PUT" />
              <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-check"></i> Salvar</button>
              <a class="btn btn-default" href="{{path('list-empresa')}}" role="button"><i class="glyphicon glyphicon-minus-sign"></i> Cancelar</a>
            </div>
        </form>
    </div>
    {% if msg.ERROS is defined %}
      <div class="alert alert-danger alert-dismissable row" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><ul>
      {%for erro in msg.ERROS%}
          <li>{{erro.Campo}}</li>
      {%endfor%}
          </ul></div>
    {%endif%}
</div>
{% endblock %}

