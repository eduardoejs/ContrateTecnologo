{% extends 'layout.twig' %}

{% block conteudo %}    
<div id="resultado">
    <br><br><br>
<div class="row">
    <div class="col-lg-12">
        <h2>Cursos da Instituição</h2>
    </div>
</div>
    
<div id="Pesquisar">
    Infome o curso: 
    <input type="text" name="txtnome" id="txtnome" {%if search is defined %} value="{{search}}" {% endif %}/> 
    <input type="button" name="btnPesquisar" value="Pesquisar Ajax" onclick="getDados();"/>
</div>

<div class="row">    
    <div class="col-lg-1">
        <a href="{{ path('new-curso') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Curso</a>
    </div>
        <div class="col-lg-3">Total de <strong>{{totalRegistros}}</strong> registros encontrados. {%if search is defined %} Termo pesquisado: <b>{{search}}</b> {%endif%}</div>
    <div class="col-lg-8">
        <form action="{{ path("search-curso") }}" class="form-inline" role="form">
            <div class="form-group">
                <label class="sr-only" for="">Curso</label>
                <input type="text" class="form-control" name="search" placeholder="Nome do Curso..." {%if search is defined %} value="{{search}}" {% endif %}>
            </div>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i> Pesquisar</button>            
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        {% for message in app.session.getFlashBag.get('messageSuccess') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}
        {% for message in app.session.getFlashBag.get('messageFail') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}        
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Created</th>                    
                    <th>Updated</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for curso in cursos %}
                    <tr>
                        <td>{{ curso.nome }}</td>
                        <td>{{ curso.createdAt is empty ? "" : curso.createdAt|date('d/m/Y H:i:s') }}</td>
                        <td>{{ curso.updatedAt is empty ? "" : curso.updatedAt|date('d/m/Y H:i:s') }}</td>
                        <td>
                            <a href="{{ path('edit-curso', {id: curso.id}) }}" class="btn btn-info btn-sm">Editar</a>
                            <a href="{{ path('delete-curso', {id: curso.id}) }}" class="btn btn-danger btn-sm">Remover</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <ul class="pagination">
            {{ paginacao |raw }}
        </ul>        
    </div>
</div>


</div>
            
{% endblock %}

{% block scripts %}    
    <script type="text/javascript" src="/assets/custom/js/busca2.js"></script>
{% endblock %}