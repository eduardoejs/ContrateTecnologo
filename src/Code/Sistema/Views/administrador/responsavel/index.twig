{% extends 'layout.twig' %}

{% block links %}
{% endblock %}

{% block conteudo %}
<br><br><br>
<div class="row">
    <div class="col-lg-12">
        <h2>Responsáveis da empresa: {{empresa[0].nome}}</h2>        
    </div>
</div>

<div>
  <ol class="breadcrumb">
    <li><a href="{{ path('index-admin') }}">Painel do Administrador</a></li>
    <li><a href="#">Módulos</a></li>
    <li><a href="{{ path('list-empresa') }}">Empresa</a></li>
    <li class="active">Responsáveis</li>
  </ol>
</div>

<div class="row">
    <div class="col-lg-9">
        <a href="{{ path('new-empresa-resp', {empresa_id: empresa[0].id}) }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Responsável</a>
    </div>
    <div class="col-lg-3">
        <form action="{{ path("search-empresa-resp", {empresa_id: empresa[0].id}) }}" class="form-inline" role="form">
            <div class="form-group">
                <label class="sr-only" for="">Responsaveis</label>
                <input type="text" class="form-control" name="search" placeholder="Nome do responsável..." {%if search is defined %} value="{{search}}" {% endif %}>
            </div>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i> </button>            
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
    	<div>Total de <strong>{{totalRegistros}}</strong> registros encontrados. {%if search is defined %} {%if search is not empty %}Termo pesquisado: <b>{{search}}</b> {%endif%}{%endif%}</div>
    	<table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Email</th>                                      
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for responsavel in responsaveis %}
                    <tr>
                        <td>{{ responsavel.nome }}</td>
                        <td>{{ responsavel.cpf }}</td>
                        <td>{{ responsavel.email }}</td>                        
                        <td>
                            <a href="{{ path('edit-empresa-resp', {id: responsavel.id, empresa_id: empresa[0].id}) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </a>
                            <!--<a href="{#{{ path('delete-empresa-resp', {id: responsavel.id}) }}#}" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remover</a>-->
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <ul class="pagination">
            {{ paginacao |raw }}
        </ul>
    </div>
</div>
{% endblock %}

{% block scripts %}
{% endblock %}